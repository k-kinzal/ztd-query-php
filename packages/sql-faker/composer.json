{
    "name": "k-kinzal/sql-faker",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SqlFaker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Fuzz\\": "fuzz/"
        }
    },
    "require": {
        "php": "^8.1",
        "fakerphp/faker": "^1.23"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "k-kinzal/testcontainers-php": "^0.4.0",
        "nikic/php-fuzzer": "^0.0.11",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "build": "php bin/build.php",
        "test": "phpunit --testsuite unit",
        "lint": [
            "@format:check",
            "phpstan analyse --memory-limit=512M"
        ],
        "format": "php-cs-fixer fix --allow-risky=yes",
        "format:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "fuzz": "php-fuzzer fuzz fuzz/fuzz_sql_syntax.php fuzz/corpus/"
    },
    "config": {
        "sort-packages": true
    }
}
